    <style>
        body {
            background-color: rgb(184, 195, 205);
            background-image: url('https://i.pinimg.com/736x/c5/c8/a1/c5c8a1b87c3fd07644f82d5d70447279.jpg');
            background-position: center;
            background-size: cover;
            background-blend-mode: soft-light;
        }
        image-grid img {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .image-grid img:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
        }
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .modal.show {
            display: flex;
            opacity: 1;
        }
        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            height: 80%;
            overflow: auto;
            transform: scale(0.9);
            transition: transform 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .modal.show .modal-content {
            transform: scale(1);
        }
        .modal-content img {
            max-width: 100%;
            max-height: 50%;
            margin-bottom: 20px;
        }
        @media (max-width: 600px) {
            .modal-content {
                width: 95%;
                height: auto;
            }
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const images = document.querySelectorAll(".image-grid img");
            const modal = document.getElementById("modal");
            const modalContent = document.getElementById("modal-content");

            images.forEach(image => {
                image.addEventListener("click", () => {
                    const info = image.getAttribute("data-info");
                    modalContent.innerHTML = `<img src="${image.src}"><p>${info}</p>`;
                    modal.classList.add("show");
                });
            });

            modal.addEventListener("click", (e) => {
                if (e.target === modal || e.target === modalContent) {
                    modal.classList.remove("show");
                }
            });
        });
    </script>
